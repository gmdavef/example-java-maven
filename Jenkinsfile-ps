pipeline {
    agent any

    stages {
        stage('Pull') {
            steps {
                echo '---PULL---'
                git 'https://github.com/gmdavef/example-java-maven.git'
            }
        }
        stage('Build') {
            steps {
                echo '---BUILD---'
                withMaven(maven: 'Mvn3') {
                    sh "mvn clean package"
                }
            }
        }
        stage('SCA-Scan') {
            environment {
                SRCCLR_API_TOKEN = credentials('SCA_token')
            }
            steps {
                echo 'testSCAtest'
                pwsh --version
                echo ${WORKSPACE}
                cd ${WORKSPACE}
                pwsh -Command ("Set-ExecutionPolicy AllSigned -Scope Process -Force")
                pwsh -Command ("(New-Object System.Net.WebClient).DownloadString(\'https://download.sourceclear.com/ci.ps1\') | srcclr scan")
            }
        }
        
    }
}
