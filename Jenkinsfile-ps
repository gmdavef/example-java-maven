pipeline {
    agent any

    stages {
        stage('Pull') {
            steps {
                echo '---PULL---'
                git 'https://github.com/gmdavef/example-java-maven.git'
            }
        }
        stage('Build') {
            steps {
                echo '---BUILD---'
                withMaven(maven: 'Mvn3') {
                    sh "mvn clean package"
                }
            }
        }
        stage('SCA-Scan') {
            steps {
                powershell '''cd ${WORKSPACE}
                $env: SRCCLR_API_TOKEN: $(apiToken)
                Set-ExecutionPolicy AllSigned -Scope Process -Force
                iex ((New-Object System.Net.WebClient).DownloadString(\'https://download.sourceclear.com/ci.ps1\')) | srcclr scan .'''
            }
        }
        
    }
}
