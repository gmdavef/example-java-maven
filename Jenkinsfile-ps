pipeline {
    agent any

    stages {
        stage('Pull') {
            steps {
                echo '---PULL---'
                git 'https://github.com/gmdavef/example-java-maven.git'
            }
        }
        stage('Build') {
            steps {
                echo '---BUILD---'
                withMaven(maven: 'Mvn3') {
                    sh "mvn clean package"
                }
            }
        }
        stage('SCA-Scan') {
            environment {
                SRCCLR_API_TOKEN = credentials('SCA_token')
            }
            steps {
                pwsh --version
                pwsh ('''
                  echo 'testSCAtest'
                  cd ${WORKSPACE}
                  (New-Object System.Net.WebClient).DownloadString(\'https://download.sourceclear.com/ci.ps1\') | Invoke-Expression 
                  srcclr scan
                ''')
            }
        }
        
    }
}
